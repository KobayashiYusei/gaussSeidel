# See LICENSE file for more details.

ng (){
 echo "in line ${1} an Error occured."
 res=1
}
res=0
out=$(echo '[4, -1, 0, 0] [-1, 4, -1, 0] [0, -1, 4, -1] [0, 0, -1, 3] [15, 10, 10, 10]' | ./gusdl)
[ "$?" = 0 ] || ng "$LINENO"
echo "$out" | grep -q "収束しました" || ng "$LINENO"
echo "$out" | grep -q "解" || ng "$LINENO"

out=$(echo '[1, 1] [-1, 1] [1, 0]' | ./gusdl)
[ "$?" = 0 ] || ng "$LINENO"
echo "$out" | grep -q "ガウスザイデル法によって解が収束することはありませんでした。" || ng "$LINENO"

out=$(echo | ./gusdl)
[ "$?" = 0 ] || ng "$LINENO"
echo "$out" | grep -q "無効な入力です。" || ng "$LINENO"

out=$(echo "[4, -1, 0, 0] [-1, 4, -1, 0] [0, -1, 4, -1] [0, 0, -1, 3] [15, 10, 10]" | ./gusdl)
[ "$?" = 0 ] || ng "$LINENO"
echo "$out" | grep -q "方程式の数が変数の数と一致しません." || ng "$LINENO"

out=$( echo '[3, 1] [1, 3] [7,]' | ./gusdl)
[ "$?" = 1 ] || ng "$LINENO"

[ "$res" = 0 ] && echo PASS
exit $res